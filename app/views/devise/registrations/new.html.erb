
<meta charset="utf-8">
<title>ログイン画面</title>
<%= stylesheet_link_tag 'newAccount', media: 'all', 'data-turbolinks-track': 'reload' %>

<%# <%= render "devise/shared/links" %> 

<div class="background2">
      <div class="login">
        <div style="background: #ffffff; border: #060606 double 6px; border-radius:15px; font-size: 100%; padding: 15px;">
          <div class="login-screen">
            <div class="app-title">
              <h1>新規作成</h1>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                <div class="login-form">
                  <div class="control-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール" %>      
                  </div>

                  <div class="control-group">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "アカウント名"%>
                  </div>

                  <div class="control-group">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
                  </div>


                  <div class="control-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認" %>
                  </div>

                  <div class="box-login">
                    <%= f.submit "作成" %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
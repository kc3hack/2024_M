<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>ログイン画面</title>
    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="background">
      <div class="login">
        <div class="login-screen">
          <div class="app-title">
            <h1>ログイン</h1>
          </div>

          <div class="login-form">
            <div class="control-group">
              <input type="text" class="login-field" value="" placeholder="username" id="login-name">
              <label class="login-field-icon fui-user" for="login-name"></label>
            </div>

            <div class="control-group">
              <input type="password" class="login-field" value="" placeholder="password" id="login-pass">
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>

            <a class="btn btn-primary btn-large btn-block" href="http://localhost:3000/courses/mypageRecommend">ログイン</a>
            
            <a class="btnNew btn-primary btn-large btn-block" href="http://localhost:3000/courses/newAccount">新規作成</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
